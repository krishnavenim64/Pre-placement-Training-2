class KthSmallestBST {
    static int count = 0, result = 0;

    public static int kthSmallest(TreeNode root, int k) {
        inorder(root, k);
        return result;
    }

    static void inorder(TreeNode node, int k) {
        if (node == null) return;

        inorder(node.left, k);
        count++;
        if (count == k) {
            result = node.val;
            return;
        }
        inorder(node.right, k);
    }
}
