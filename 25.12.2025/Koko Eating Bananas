class KokoBananas {
    public static int minEatingSpeed(int[] piles, int h) {
        int low = 1, high = 0;
        for (int p : piles) high = Math.max(high, p);

        while (low < high) {
            int mid = (low + high) / 2;
            int hours = 0;

            for (int p : piles)
                hours += Math.ceil((double) p / mid);

            if (hours <= h)
                high = mid;
            else
                low = mid + 1;
        }
        return low;
    }
}
