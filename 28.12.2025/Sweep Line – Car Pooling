class CarPooling {
    public static boolean carPooling(int[][] trips, int capacity) {
        int[] diff = new int[1001];

        for (int[] t : trips) {
            diff[t[1]] += t[0];
            diff[t[2]] -= t[0];
        }

        int curr = 0;
        for (int d : diff) {
            curr += d;
            if (curr > capacity) return false;
        }
        return true;
    }
}
